  <script>
  const roles = [
    "Front-end Developer",
    "Back-end Developer",
    "3D Artist"
  ];

  const rotator = document.getElementById("role-rotator");
  let i = 0;

  function rotateText() {
    if (!rotator) return;

    // Mulai fade out
    rotator.classList.remove("animate-fadeSlideUp");

    // Setelah fade out selesai, ganti teks lalu fade in
    setTimeout(() => {
      rotator.textContent = roles[i];
      rotator.classList.add("animate-fadeSlideUp");
      rotator.classList.remove("animate-fadeOut");

      i = (i + 1) % roles.length;
    }, 500); // waktu fadeOut
  }

  rotateText();
  setInterval(rotateText, 3000); // total 3s per role


</script>

